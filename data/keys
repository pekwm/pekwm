        KeyPress = "Mod4 Shift 1" { Actions = "SendToWorkspace 1" }
        KeyPress = "Mod4 Shift 2" { Actions = "SendToWorkspace 2" }
        KeyPress = "Mod4 Shift 3" { Actions = "SendToWorkspace 3" }
