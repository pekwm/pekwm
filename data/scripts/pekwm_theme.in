  ColorMap = "Focused" {
    Map = "#aaaaaa" { To = "\$COLOR_FO" }
    Map = "#ffffff" { To = "\$COLOR_FO_LO" }
  }
  ColorMap = "Unfocused" {
    Map = "#aaaaaa" { To = "\$COLOR_UN" }
    Map = "#ffffff" { To = "\$COLOR_UN_LO" }
  }
  ColorMap = "Hoover" {
    Map = "#aaaaaa" { To = "\$COLOR_FO_SEL" }
    Map = "#ffffff" { To = "\$COLOR_FO_SEL_HI" }
    Map = "#000000" { To = "#ffffff" }
